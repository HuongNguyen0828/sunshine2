{
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
