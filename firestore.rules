rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Classes collection
    match /classes/{classId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin()
        && request.resource.data.keys().hasAll(['name', 'capacity', 'volume', 'ageStart', 'ageEnd'])
        && request.resource.data.name is string
        && request.resource.data.capacity is number;
      allow update, delete: if isAdmin();
    }

    // Schedules collection - SCHEMA VALIDATION
    match /schedules/{scheduleId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin()
        && request.resource.data.keys().hasAll([
          'weekStart', 'dayOfWeek', 'timeSlot',
          'activityTitle', 'classId', 'userId', 'color', 'order'
        ])
        && request.resource.data.weekStart is string
        && request.resource.data.dayOfWeek is string
        && request.resource.data.timeSlot is string
        && request.resource.data.activityTitle is string
        && request.resource.data.classId is string
        && request.resource.data.userId is string
        && request.resource.data.color is string
        && request.resource.data.order is number;
      allow update, delete: if isAdmin();
    }

    // Daycare Provider collections
    match /daycareProvider/{providerId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
